@model WardModel

<div class="text-center">
    <h2>Редактирование палаты (id = @Model.Id)</h2>
</div>

@using (Html.BeginForm("Edit", "Wards", FormMethod.Post))
{
    <div>
        <div style="margin-top: 20px;">
            <label asp-for="Name">@Html.DisplayNameFor(model => model.Name):</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div style="margin-top: 20px;">
            <label asp-for="Places">@Html.DisplayNameFor(model => model.Places):</label>
            <input asp-for="Places" class="form-control" />
            <span asp-validation-for="Places" class="text-danger"></span>
        </div>

        <div style="margin-top: 20px;">
            <label asp-for="DepartmentId"></label>
            <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Departments"></select>
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>

        <div style="margin-top: 20px;">
            <button type="submit" class="btn btn-sm btn-primary" style="width: 200px;"><i class="fa fa-floppy-o"></i> Сохранить</button>
        </div>
    </div>
}
@using (Html.BeginForm("Delete", "Wards", new { Model.Id }, FormMethod.Post))
{
    <button type="submit" class="btn btn-sm btn-danger" style="margin-top: 5px; width: 200px;" onclick="return deleteConfirm('палату', @Model.Id);"><i class="fa fa-trash"></i> Удалить</button>
}
<a asp-action="Index" class="btn btn-sm btn-secondary" style="margin-top: 5px; width: 200px;"><i class="fa fa-ban"></i> Вернуться</a>